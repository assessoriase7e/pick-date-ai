generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Professional {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phone     String
  company   String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  audios    AudioRecord[]
  images    ImageRecord[]
  documents DocumentRecord[]

  @@map("professional")
}

model AudioRecord {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  audioBase64    String
  description    String
  professional   Professional @relation(fields: [professionalId], references: [id], onDelete: Cascade)
  professionalId String       @db.ObjectId
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("audiorecord")
}

model ImageRecord {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  imageBase64    String
  description    String
  professional   Professional @relation(fields: [professionalId], references: [id], onDelete: Cascade)
  professionalId String       @db.ObjectId
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("imagerecord")
}

model User {
  id        String   @id @map("_id")  // Changed to use Clerk ID directly as primary key
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ApiKey ApiKey[]

  @@map("user")
}

model ApiKey {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  key         String   @unique
  description String?
  userId      String   // No need for @db.ObjectId since userId references Clerk ID
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@map("apikey")
}

model DocumentRecord {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  documentBase64 String
  fileName       String
  fileType       String
  description    String
  professional   Professional @relation(fields: [professionalId], references: [id], onDelete: Cascade)
  professionalId String       @db.ObjectId
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("documentrecord")
}
