generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Professional {
  id        String        @id @default(cuid())
  name      String
  phone     String
  company   String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  audios    AudioRecord[]
  images    ImageRecord[]

  @@map("professional")
}

model AudioRecord {
  id             String       @id @default(cuid())
  audioBase64    String       @db.Text
  description    String       @db.Text
  professional   Professional @relation(fields: [professionalId], references: [id], onDelete: Cascade)
  professionalId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("audiorecord")
}

model ImageRecord {
  id             String       @id @default(cuid())
  imageBase64    String       @db.Text
  description    String       @db.Text
  professional   Professional @relation(fields: [professionalId], references: [id], onDelete: Cascade)
  professionalId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("imagerecord")
}

model User {
  id        String   @id
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ApiKey ApiKey[]

  @@map("user")
}

model Appointments {
  id            BigInt   @id @default(autoincrement())
  phone         Decimal? @db.Decimal
  business_name String?
  start_time    String?
  end_time      String?
  event_id      String?
  created_at    DateTime @default(now()) @db.Timestamptz(6)

  @@map("appointments")
}

model Clients {
  id            BigInt   @id @default(autoincrement())
  full_name     String?
  phone         String?
  created_at    DateTime @default(now()) @db.Timestamptz(6)
  business_name String?

  @@map("clients")
}

model Documents {
  id        BigInt                 @id @default(autoincrement())
  content   String?
  metadata  Json?
  embedding Unsupported("vector")?

  @@map("documents")
}

model ApiKey {
  id          String   @id @default(cuid())
  key         String   @unique
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@map("apikey")
}
